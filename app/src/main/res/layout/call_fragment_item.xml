<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20sp"
    android:layout_marginRight="10sp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/callAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginRight="10sp"
        app:shapeAppearance="@style/RoundCorner"
        android:background="@mipmap/avatar_foreground"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/callName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caller_name"
            android:layout_marginTop="2sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="36dp" />

        <TextView
            android:id="@+id/callSpentTime"
            android:layout_width="419dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="@string/call_spent_time"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="126dp" />
    </LinearLayout>

</LinearLayout>