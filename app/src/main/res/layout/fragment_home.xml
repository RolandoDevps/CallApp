    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        tools:context=".controller.MainActivity">

        <TextView
            android:id="@+id/greet_message"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:text="@string/greet_message"
            android:textAlignment="textStart"
            android:textColor="#070707"
            android:textSize="36sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:keepScreenOn="true"
            android:text="@string/welcome_message"
            android:textAlignment="textStart"
            android:textColor="#070707"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/about_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:keepScreenOn="true"
            android:text="@string/about_message"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/callAvatar"
        android:layout_width="274dp"
        android:layout_height="299dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10sp"
        android:adjustViewBounds="true"
        android:background="@mipmap/home_foreground"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/RoundCorner" />

    <!--        </LinearLayout>-->
